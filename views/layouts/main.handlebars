<body>
{{#unless isLogin}}
  <!-- savepoint header  -->
  <header class="glow">Savepoint</header>

  <!-- nav bar has its own container outside of the header -->
  <nav>
    <ul>
      <!-- links for nav bar can go here -->
      <a id="navLink" href="/home">Home</a>
      {{#if loggedIn}}
      <a id="navLink" href="http://localhost:3001/landing/login" class="logout">Logout</a>
      {{else}}
      <a id="navLink" href="http://localhost:3001/landing/login">Login</a>
      {{/if}}
      <a id="navLink" href="http://localhost:3001/favorites">Playlist</a>
      <a id="navLink" href="https://www.twitch.tv" target="_blank">Twitch</a>
    </ul>
  </nav>
{{/unless}}

<main>
  <div class="reviewModal">
    <form>
      <div class="formDiv">
        <div class="inputDiv">
          <p>
            <label for="rating">Rating: </label>
            <input id="rating" placeholder="50" style="border:0; color:#6B3073; font-weight:bold;">
          </p>

          <div id="slider-range-min"></div>
        </div>
        <div class="inputDiv">
          <label class="form-label" for="notes">Notes</label>
          <textarea  id="notes"></textarea>
        </div>
      </div>
      <div class="formDiv">
        <button class="myBtn" id="reviewSubmit" type="submit">Submit Review</button>
        <button class="myBtn" id="exitBtn" type="button">Exit</button>
      </div>
    </form>
  </div>
  <div class="blurDiv">
  </div>
    {{{body}}}
  
</main>

<footer>
  <div>
    <p>SAMPLE FOOTER</p>
  </div>
 </footer>
