<section class="vh-100 gradient-custom">
  <div class="div1">
    <div class="card bg-dark text-white" style="border-radius: 5rem;">
      <div class="card-body p-5 text-center">
        <p class="text-white-50 mb-5">Search more games</p>
        <div class="form-outline form-white mb-4">
          <!-- search bar -->
          <input type="search" id="searchBar" class="form-control form-control-lg" />
          <button type="button" id="searchSubmit" for="search">Search</button>
        </div>
      </div>
    </div>
  </div>

  <div class="div2"> 
    <div class="card bg-dark text-white" style="border-radius: 1rem;">
      <div class="card-body p-5 text-center">
        <div class="mb-md-5 mt-md-4 pb-5">
          <h2 class="fw-bold mb-2 text-uppercase">{{gameResult.title}}</h2>
          <p>Release Date: {{getDate gameResult.release_date}}</p>
          <img style="width: 18rem; heigh:20rem" src="{{gameResult.cover_art_url}}"/>
          <br>
          <h4 class="fw mb-2">{{gameResult.description}}</h4>
          <br>
          <h4 class="fw mb-2">Game rating: {{gameResult.rating}}/100</h4>
          <button data-id= {{id}} id="addPBtn" class="btn btn-primary">★ Favorite</button>
          <button type='button' data-id= {{id}} id="addPBtn" class="btn btn-primary">★ Favorite</button>
        </div>
      </div>
  </div>

  <div class="div5">
    <div class="card bg-dark text-white" style="border-radius: 1rem;">
      <div class="card-body p-5 text-center">
        <div class="mb-md-5 mt-md-4 pb-5">
          <h2 class="fw-bold mb-2 text-uppercase">Reviews</h2>
          <a href="#" class="btn btn-primary">Add a review</a>
          
          <div>
            {{#each gameResult.reviews as |review|}}
              {{> review}}
            {{/each}}
          </div>
        </div>
        </p>
      </div>
  </section>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script rel="script" src="/public/js/games.js"></script>
  <script src="/public/js/search.js"></script>
